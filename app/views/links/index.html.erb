<div class="clear"></div>
<div class="container_24">
	<div id="links">
		<h3>Your link stream</h3>
	  <%= render :partial => 'link', :collection => @links %>	
	</div>
</div>

<script type="text/javascript">
  $(function() {
    var counter = 0;
    var linkIds = new Array();
    
    requestDetails(0);
    
  	$('#links a').tipsy({
  				gravity: 'sw'
  	});
  	
  	$('#links span').tipsy({
  				gravity: 's'
  	});
	});
	
	function requestDetails(index) {
	  while (counter < $(".grid_7").length) { 
      $(".grid_7")[counter]).load("/links/get_page_title/" + linkIds[counter], function() {
        requestDetails(counter++);
      });	  
    }
	}
</script>
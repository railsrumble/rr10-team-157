<div class="clear"></div>
<div class="container_24">
	<div id="links">
		<h3>Your link stream</h3>
	  <%= render :partial => 'link', :collection => @links %>	
	</div>
</div>

<script type="text/javascript">
  $(function() {
    requestDetails();
    
  	$('#links a').tipsy({
  				gravity: 'sw'
  	});
  	
  	$('#links span').tipsy({
  				gravity: 's'
  	});
	});
	
	function requestDetails() {
	  while (counter < $(".grid_7").length) { 
      $($(".grid_7")[counter]).load("/links/get_page_title/" + linkIds[counter], function() {
        requestDetails(counter++);
      });
    }
  }
</script>